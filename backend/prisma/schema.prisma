generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String       @id @default(uuid())
  createdAt   DateTime     @default(now())
  name        String
  role        Role         @default(USER)
  email       String       @unique
  password    String
  assignments Assignment[]
}

model Task {
  id          String       @id @default(uuid())
  createdAt   DateTime     @default(now())
  title       String
  description String
  deadline    DateTime
  userStatus  Status       @default(INPROGRESS)
  assignments Assignment[]
  adminStatus AdminStatus  @default(OPEN)
}

model Assignment {
  userId String
  taskId String
  status Status

  user User @relation(fields: [userId], references: [id])
  task Task @relation(fields: [taskId], references: [id])

  @@id([userId, taskId])
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  INPROGRESS
  COMPLETED
}

enum AdminStatus {
  OPEN
  CLOSED
}
